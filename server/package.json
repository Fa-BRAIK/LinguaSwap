{
  "name": "server",
  "version": "1.0.0",
  "description": "Exchange languages",
  "main": "dist/index.js",
  "type": "module",
  "compilerOptions": {
    "esModuleInterop": true
  },
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "rimraf dist && concurrently \"npx tsc --watch\" \"sleep 5 && nodemon -q dist/index.js\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down && docker-compose rm --force",
    "pretest": "npm run docker:up && sleep 2 && dotenv -e .env.test npx prisma migrate deploy",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest -i",
    "posttest": "npm run docker:down"
  },
  "prisma": {
    "seed": "ts-node-esm src/database/seeders/admin.seeder.ts"
  },
  "keywords": [],
  "author": "Farouk Braik",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-typescript": "^7.21.5",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.16.3",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "prisma": "^4.14.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@prisma/client": "^4.14.0",
    "bcrypt": "^5.1.0",
    "chalk": "^5.2.0",
    "concurrently": "^8.0.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "nodeenv": "^3.0.75",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "tslib": "^2.5.0"
  },
  "imports": {
    "#routes/*": "./dist/routes/*",
    "#controllers/*": "./dist/controllers/*",
    "#validators/*": "./dist/validators/*",
    "#errors/*": "./dist/errors/*",
    "#handlers/*": "./dist/handlers/*",
    "#config/*": "./dist/config/*",
    "#middlewares/*": "./dist/middlewares/*",
    "#enums/*": "./dist/enums/*",
    "#src/*": "./dist/*"
  }
}
