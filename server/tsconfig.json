{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "Nodenext",
        "target": "ESNext",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "#routes/*": ["./src/routes/*"],
            "#controllers/*": ["./src/controllers/*"],
            "#validators/*": ["./src/validators/*"],
            "#errors/*": ["./src/errors/*"],
            "#handlers/*": ["./src/handlers/*"],
            "#config/*": ["./src/config/*"],
            "#middlewares/*": ["./src/middlewares/*"],
            "#enums/*": ["./src/enums/*"],
            "#helpers/*": ["./src/helpers/*"],
            "#src/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["src/tests/**/*.test.ts", "src/tests/**/*.spec.ts", "src/tests/**/*.json"]
}